# ProofPix Enterprise - Environment Variables Configuration

# Application Settings
NODE_ENV=production
PORT=5000
APP_NAME=ProofPix Enterprise API
APP_VERSION=2.0.0

# Database Configuration (Railway will provide this)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Security Settings
JWT_SECRET=your-super-secure-jwt-secret-key
API_KEY_SECRET=your-api-key-encryption-secret
CORS_ORIGIN=https://proofpix.com,https://www.proofpix.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=52428800
SUPPORTED_FORMATS=image/jpeg,image/png,image/tiff,image/heic,image/webp

# Enterprise Features
ENTERPRISE_MODE=true
WHITE_LABEL_ENABLED=true
CUSTOM_FIELDS_ENABLED=true
TEAM_MANAGEMENT_ENABLED=true

# Payment Integration (Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Analytics & Monitoring
ANALYTICS_ENABLED=true
ERROR_TRACKING_ENABLED=true
PERFORMANCE_MONITORING=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@proofpix.com
SMTP_PASS=your-smtp-password
SMTP_FROM=ProofPix Enterprise <noreply@proofpix.com>

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Document Intelligence (Revenue Critical)
DOCUMENT_AI_ENABLED=true
DOCUMENT_PROCESSING_QUOTA_STARTER=10
DOCUMENT_PROCESSING_QUOTA_PRO=100
DOCUMENT_PROCESSING_QUOTA_ENTERPRISE=1000

# Billing Configuration
BILLING_ENABLED=true
REVENUE_TRACKING=true
USAGE_ANALYTICS=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs

# Development Settings (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_PAYMENTS=false 